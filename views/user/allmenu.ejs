<%- include('./layoutfood')%>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="/public/stylesheets/user/dish.css">
<link href='https://fonts.googleapis.com/css?family=Kanit&subset=thai,latin' rel='stylesheet' type='text/css'>

    <p hidden id="tableid"><%=table%></p>
    <h1><%=type%></h1>
    <% Object.values(menus).forEach(function(item) { %>
        <div class="card" style="width: 20rem; margin-bottom: 15px; margin-left: auto; margin-right: auto; display: block; border-radius: 15px;">
            <img src="/uploads/<%=item.img%>" class="card-img-top" alt="image" style="width: 50%; margin-top: 15px;">
            <div class="card-body">
              <h5 class="card-title"><%=item.name%></h5>
              <p class="card-text">ราคา : <%=item.price%> ฿</p>
              <a href="/customer/detail/<%=item._id%>/<%=table%>" type="submit" class="btn btn-primary" style="background-color: blueviolet;">เลือก</a>
            </div>
          </div>
    <% }) %>

<%- include('./endlayoutfood')%>