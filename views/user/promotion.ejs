<%- include('./layoutfood')%>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href='https://fonts.googleapis.com/css?family=Kanit&subset=thai,latin' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="/public/stylesheets/user/promotion.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
  <div>
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
      <% Object.values(ran).forEach(function(random) { %>
      <% Object.values(promotion).forEach(function(itempro, index) { %>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <a href="/customer/detailpro/<%=itempro._id%>/<%=table%>/<%=random.random%>" type="submit">
              <img src="/uploads/<%=itempro.img%>" class="d-block w-100" alt="...">
            </a>
          </div>
          <% }) %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
          data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
          data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
    </div>
  </div><br>

  <h1>Promotion</h1>
  <% Object.values(promotion).forEach(function(itempro, index) { %>

    <div class="card" style="width: 20rem; margin-bottom: 15px; margin-left: auto; margin-right: auto; display: block; border-radius: 15px;">
      <img src="/uploads/<%=itempro.img%>" class="card-img-top" alt="image" style="width: 50%; margin-top: 15px;">
      <div class="card-body">
        <h5 class="card-title"><%=itempro.name%></h5>
        <p class="card-text">ราคา : <%=itempro.price%> ฿</p>
        <a href="/customer/detailpro/<%=itempro._id%>/<%=table%>/<%=random.random%>" type="submit" class="btn btn-primary" style="background-color: blueviolet;">เลือก</a>
      </div>
    </div>
    <% }) %>
    <% }) %>
      <%- include('./endlayoutfood')%>