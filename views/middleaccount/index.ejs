    <title>middle account</title>
    <link href='https://fonts.googleapis.com/css?family=Kanit&subset=thai,latin' rel='stylesheet' type='text/css'>
    <style>
        .grid-container {
            display: grid;
            grid-template-columns: auto auto auto;
            padding: 20px;

        }

        .grid-item {
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 20px;
            height: 100px;
            padding: 10px;
            font-size: 30px;
            margin: 15px;
            text-align: center;
        }
    </style>
</head>

<body style="background-color: orange;">
    <div style="background-color: burlywood; padding: 30px; margin: 15px; border-radius: 10px; font-family: 'Kanit';">
        <h1 style="text-align: center;">Gen Restaurant Middle</h1>

        <a href="/middle/showtable" target="_blank" class="btn btn-secondary" style="font-size: 25px;">
            แสดงการแจ้งเตือน
        </a>
        <a href="/" class="btn btn-danger" style="font-size: 25px;">
            Log out
        </a>




        <div class="grid-container">
            <% Object.values(tables).forEach(function(table, index) { %>

                <a href="/middle/middletdetail/<%=table.tableid%>" style="text-decoration: none; color: black;">
                    <div class="grid-item">
                        <img src="/public/images/icon/tablefood.png" alt="tablefood" style="width: 20%;">
                        <span style="font-size: 35px;">:&nbsp;<%=table.tableid%></span>
                    </div>
                </a>
                <% }) %>
        </div>
    </div>

</body>

</html>