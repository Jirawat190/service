<%- include('./layout')%>

    <div style="margin-top: -100px;">
        <a href="/editmanu" class="btn btn-danger" style="font-size: 30px; text-decoration: none; text-align: left;">ย้อนกลับ</a>
        <h1 style="text-align: center;">แก้ไขเมนูอาหาร</h1>
        <div style="text-align: center; width: 30%; display: block; margin-left: auto; margin-right: auto;">
            <form action="/editmenu" method="post" enctype="multipart/form-data">
                <input hidden value="<%=edit.id%>" type="text" name="editid" required autocomplete="off"> <br>
                <label class="form-label">ชื่อ</label>
                <input value="<%=edit.name%>" class="form-control" type="text" name="editname" required
                    autocomplete="off"> <br>
                <label class="form-label" style="margin-top: 10px;">ราคา</label>
                <input value="<%=edit.price%>" class="form-control" type="text" name="editprice" required
                    autocomplete="off"> <br>
                <div class="mb-3">
                    <label class="form-label">ประเภทอาหาร</label><br>
                    <select name="typefood" id="typefood" class="form-select">
                        <option value="">
                            <%=edit.typefood%>
                        </option>
                        <% Object.values(typefood).forEach(function(item, index) { %>
                            <option value="<%=item%>" id="<%=item%>">
                                <%=item%>
                            </option>
                            <% }) %>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="formFile" class="form-label">รูปภาพ</label>
                    <input type="hidden" value="<%=edit.img%>" name="image">
                    <input class="form-control" type="file" name="file" id="">
                </div>

                <label class="form-label">เมนูเสริม</label> <br>

                <% Object.values(option).forEach(function(item) { %>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="<%=item._id%>" id="flexCheckChecked"
                            name="option" checked>
                        <label class="form-check-label" for="flexCheckChecked">
                            <option hidden value="<%=item._id%>"></option>
                            <%=item.name%>
                        </label>
                    </div>
                    <% }) %>


                 <button type="submit" class="btn btn-secondary"
                            style="margin-top: 35px; margin-bottom: 35px; font-size: 25px;">แก้ไข</button>
            </form>
        </div>
    </div>
    <%- include('./endlayout')%>