    <div class="container" style="margin-right: 6%; text-align: center; margin-top: -80px;">
        <h1>จัดการโปรโมชั่น</h1>
        <button class="btn btn-primary" onclick="window.location.href='/addpromotion'" role="button">เพิ่ม</button>
        <table class="table table-bordered" style="text-align: center; margin-top: 25px;">
            <thead>
                <tr>
                    <th>อันดับ</th>
                    <th>รูป</th>
                    <th>ชื่อเมนู</th>
                    <th>ราคา</th>
                    <th>รายละเอียดอาหาร</th>
                    <th>หมวดหมู่</th>
                    <th>ลบ</th>

                </tr>
            </thead>
            <tbody>
                <% Object.values(promotion).forEach(function(itempro, index) { %>
                    <tr>
                        <td>
                            <%= index + 1 %>
                        </td>

                        <td>
                            <img src="./uploads/<%=itempro.img%>" alt="image" width="80">
                        </td>

                        <td>
                            <%=itempro.name%>
                        </td>

                        <td>
                            <%=itempro.price%>
                        </td>
                        <td>
                            <ul>
                                <li>
                                    <%= itempro.menu.category1 %>
                                </li>
                                <li>
                                    <%= itempro.menu.category2 %>
                                </li>
                                <li>
                                    <%= itempro.menu.category3 %>
                                </li>
                                <li>
                                    <%= itempro.menu.category4 %>
                                </li>
                            </ul>
                        </td>

                        <td>
                            <%=itempro.typefood%>
                        </td>

                        <td>
                            <a class="btn btn-danger" href="/deletepromotion/<%=itempro._id%> "
                                onclick="return confirm('คุณต้องการลบโปรโมชั่นหรือไม่ ?')">ลบ</a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>

