    <div class="container" style="text-align: center; margin-right: 6%; margin-top: -8%;">
        <h1>จัดการโต๊ะ</h1>
        <button id="myBtn" class="btn btn-success" style="font-size: 25px; margin: 20px;">เพิ่มโต๊ะ</button>
        <div id="myModal" class="modal">
            <div class="modal-content">
                <span class="close">&times;</span>
                <form action="/inserttable" class="form-container" method="POST">
                    <h1 style="text-align: center; font-size: 25px;">เพิ่มโต๊ะอาหาร</h1>
                    <label><b>เลขโต๊ะ</b></label>
                    <input type="text" name="Tableid" required autocomplete="off" style="margin: 10px;"><br>
                    <label><b>จำนวนคน</b></label>
                    <input type="text" name="seat" required autocomplete="off" style="margin: 10px;"><br>
                    
                    <button type="submit" class="btn btn-success"style="margin: 10px;">เพิ่ม</button>
                </form>
            </div>
        </div>

        <ul>
            <% Object.values(table).forEach(function(item, index) { %>
                
                    <div style="height: 40px; margin-left: 60px;">
                        <h2 style="text-align: start;">โต๊ะที่ : <%=item.tableid%> >> 
                        <a class="btn btn-primary" href="/gettable/<%=item._id%>">รายละเอียด</a></h2>
                    </div>
                    <a class="btn btn-danger" href="/deletetable/<%=item._id%> "
                        onclick="return confirm('คุณต้องการลบโต๊ะหรือไม่ ?')">ลบ</a>
                
                <% }) %>
        </ul>
        <script>
            // Get the modal
            var modal = document.getElementById("myModal");

            // Get the button that opens the modal
            var btn = document.getElementById("myBtn");

            // Get the <span> element that closes the modal
            var span = document.getElementsByClassName("close")[0];

            // When the user clicks the button, open the modal 
            btn.onclick = function () {
                modal.style.display = "block";
            }

            // When the user clicks on <span> (x), close the modal
            span.onclick = function () {
                modal.style.display = "none";
            }

            // When the user clicks anywhere outside of the modal, close it
            window.onclick = function (event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                }
            }
        </script>
    </div>
